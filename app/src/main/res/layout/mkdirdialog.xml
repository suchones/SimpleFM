<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/titlebar"
        android:background="@color/headerColor"
        >


        <TextView
            android:layout_width="170dp"
            android:textSize="20dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/headerColor"

            android:id="@+id/searchdialogtextview"
            android:text="Enter search term"
            />


        android:layout_height="wrap_content"
        android:text="cancel"/>
    </LinearLayout>


    <EditText
        android:layout_below="@id/titlebar"
        android:id="@+id/searchdialogedittext"
        android:autoText="true"

        android:layout_width="match_parent"
        android:layout_height="46dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:id="@+id/subbar"
        android:layout_below="@id/searchdialogedittext"
        >



        <Button

            android:onClick="searchfiles"
            android:id="@+id/buttonconfrim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="confrim"/>

    </LinearLayout>
</RelativeLayout>